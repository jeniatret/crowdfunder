<h1><%= @project.name %></h1>
<%= link_to "Edit this Project", edit_project_path %> | 
<%= link_to "Delete this Project", @project, data: {confirm: "Are you sure you want to delete this project?"}, :method => :delete %>


<div>
	<p>Project Photo here!</p>
	<p>Project Description: <%= @project.description %> </p>
	<p>Owned and created by: <%= @project.owner.first_name%></p>
	<p>Funding Goal: $<%= @project.funding_goal %></p>
	<p>Days to go: <%= distance_of_time_in_words(Time.now, @project.end_date) %></p>
	<!-- <p>Start date: <%= @project.start_date.strftime("%b %d, %Y") %></p>
	<p>End date: <%= @project.end_date.strftime("%b %d, %Y") %></p> -->

</div>

<h3>Rewards</h3>
<p></p>

<% @project.rewards.each do |reward| %>
  <p><%= reward.title %> </p>
  <p>What do ya get? <%= reward.description %></p>
  <div class="button">
		<input type="submit" value="I'M IN! Pledge $<%= reward.amount %>!">
	</div>
<% end %>